<!DOCTYPE html>
<html>
  <head>
    <title>Beatfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <nav class='topnav'>
    <%= link_to 'Register', users_new_path unless current_user %>
    <%= link_to 'Log In', login_path unless current_user %>
    <% if current_user %>
        <%= link_to 'Log Out', logout_path %>
        <%= link_to current_user.username, users_path(current_user) %>
    <% end %>
  </nav>
  <% flash.each do |type, message| %>
    <p><%= message %></p>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
