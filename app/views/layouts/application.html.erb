<!DOCTYPE html>
<html>
  <head>
    <title>Beatfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <div class="left">
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#"><%= button_to 'Home', '/', method: 'get' %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#"><%= button_to 'Discover', '/discover', method: 'get' %></a>
        </li>
      </div>
        <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      <div class="right">
        <div class="dropdown">
          <button class="dropbtn">Profile</button>
          <div class="dropdown-content">
            <% if current_user %>
              <a href="#"><%= link_to 'Log Out', logout_path %></a>
              <a href="#"><%= link_to current_user.username, "/users/#{current_user.id}" %></a>
            <% else %>
              <a href="#"><%= link_to 'Register', users_new_path unless current_user %></a>
              <a href="#"><%= link_to 'Log In', login_path unless current_user %></a>
            <% end %>
          </div>
        </div>
      </div>
      </li>
    </ul>
  </nav>
  <% flash.each do |type, message| %>
    <p><%= message %></p>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
