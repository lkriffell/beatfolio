<% if @user %>
  <h2><%= @user.username %> </h2>
  <%= image_tag @user.image %><br>
  Followers: <%= @follower_count %>
  Following: <%= @following_count %>

  <% if @user.beats %>
    <h3> Beats </h3>
    <% @user.beats.each do |beat| %>
      <li><%= beat.name %></li>
    <% end %>
  <% end %>
<% end %>
