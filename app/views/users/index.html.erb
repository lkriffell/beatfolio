<center>
  <section class="profile-card-list">
    <% @users.each do |user| %>
      <article class="disabled-hover-card">
        <header class="card-header">
          <p>Member Since: <%= user.created_at.strftime("%B %d, %Y") %></p>
          <h5>
            <form action=<%="/users/#{user.id}"%> method="get">
              <button class="dropbtn logo" type="submit"><%= user.username %></button>
            </form>
          </h5>
        </header>
        <div class="card-author">
          <% if user.avatar.attached? %>
            <%= cl_image_tag(user.avatar.key, :height=>200, :width=>200) %><br>
          <% else %>
            <%= image_tag("blank.png", :height=>200, :width=>200) %><br>
          <% end %>
        </div>
      </article>
    <% end %>
  </section>
</center>